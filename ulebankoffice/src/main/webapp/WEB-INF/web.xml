<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5">

	<!-- Mapeado a modo de prueba, para que no aparezca /index...html si no 
		/incio -->
	<servlet>
		<servlet-name>inicio</servlet-name>
		<jsp-file>/index.jsp</jsp-file>
	</servlet>

	<servlet-mapping>
		<servlet-name>inicio</servlet-name>
		<url-pattern>/inicio</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>FrontalController</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<init-param>
			<param-name>contextConfigLocation</param-name>
			<param-value>/WEB-INF/spring/app-config.xml</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>FrontalController</servlet-name>
		<url-pattern>/*.htm</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>FrontalController</servlet-name>
		<url-pattern>/incrementarPrecio</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>FrontalController</servlet-name>
		<url-pattern>/usuarios</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>HelloAppEngine</servlet-name>
		<servlet-class>es.unileon.ulebankoffice.web.HelloAppEngine</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>HelloAppEngine</servlet-name>
		<url-pattern>/hello</url-pattern>
	</servlet-mapping>


	<welcome-file-list>
		<welcome-file>inicio</welcome-file>
	</welcome-file-list>

	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>


</web-app>
